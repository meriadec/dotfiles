# `ls` thoughts
function lh () {
  /bin/ls -1th | head -n ${1-1}
}

countdown() {
  start="$(( $(date '+%s') + $1))"
  while [ $start -ge $(date +%s) ]; do
    time="$(( $start - $(date +%s) ))"
    printf '%s\r' "$(date -u -d "@$time" +%H:%M:%S)"
    sleep 0.1
  done
}

# tree the git files
function gtree () {
  git ls-tree -r --name-only HEAD | tree --fromfile
}

function brbr () {
  git checkout -b "update-$(date +%s)"
}

# remove colors
