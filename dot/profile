# pick image in fzf with preview and output its name
alias pick-image='fd -d 1 -e png | tac | fzf --preview='"'"'kitty icat --clear --transfer-mode=memory --stdin=no --place=${FZF_PREVIEW_COLUMNS}x${FZF_PREVIEW_LINES}@0x0 {}'"'"''

