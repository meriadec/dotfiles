#!/bin/env bash

set -euo pipefail

# extract the output file name and remove it from args
OUTPUT_FILE="${@: -1}"
set -- "${@:1:$(($#-1))}"

# eventually get options
ORIENTATION="+append"
USE_BORDER_ONLY=false
for option in "$@"; do
  case "$option" in
    -v) ORIENTATION="-append"; shift;;
    -b) USE_BORDER_ONLY=true; shift;;
  esac
done

ALL_IMAGES=""

# add shadows to each image
for img in "$@"; do
  TMP_NAME="/tmp/$img-shadow.png"
  ALL_IMAGES="$ALL_IMAGES $TMP_NAME"
  if $USE_BORDER_ONLY; then
    magick "$img" -bordercolor '#ccc' -border 1 -bordercolor '#fff' -border 20 "$TMP_NAME"
  else
    magick "$img" \( +clone -background '#000' -shadow 60x10+0+0 \) \
      -background '#fff' +swap -layers merge "$TMP_NAME"
  fi
done

magick $ALL_IMAGES $ORIENTATION -bordercolor '#fff' -border 20x20 "$OUTPUT_FILE"

bold=$(tput bold)
normal=$(tput sgr0)
echo "âœ… Result saved in ${bold}${OUTPUT_FILE}${normal}"
